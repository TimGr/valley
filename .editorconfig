# EditorConfig
# It helps developers define and maintain consistent
# coding styles between different editors and IDEs
# http://EditorConfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

# Markdown override allow spaces at end of line
[*.md]
trim_trailing_whitespace = false
