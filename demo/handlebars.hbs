<!doctype html>

<h1>{{title}}</h1>
<h2>By {{authorName}}</h2>
{{! or: }}
{{#author}}
  <h2>By {{name}}</h2>
{{/author}}

{{! This comment will not show up in the output}}
<!-- This comment will show up as HTML-comment -->
{{!-- This comment may contain mustaches like }} --}}

{{> myPartial }}
{{> (lookup . 'myVariable') }}
{{> myPartial myOtherContext }}
{{> myPartial parameter=value }}
{{#> myPartial }}
  Failover content
{{/myPartial}}

  <div class="entry" id="idSelector">
    <h1>{{title}}</h1>
    {{#with story}}
      <div class="intro">{{{intro}}}</div>
      <div class="body">{{{body}}}</div>
    {{/with}}
  </div>
  <div class="comments">
    {{#each comments}}
      <div class="comment">
        <h2>{{subject}}</h2>
        {{{body}}}
      </div>
    {{/each}}
  </div>

  {{#if isActive}}
    <img src="star.gif" alt="Active">
  {{else}}
    <img src="cry.gif" alt="Inactive">
  {{/if}}
